{% extends "::base.html.twig" %}

{% block title %}New message {% endblock %}

{% block body %}
    {{ parent() }}

    <div class="row">
        <div class="col-lg-12">
            <h3 class="alert alert-borderless alert-info text-success text-center">Send a message</h3>
        </div>
    </div>

    {% if app.session.flashBag.has('message-success') %}

        {% for msg in app.session.flashBag.get('message-success') %}
            <div class="row">
                <div class="alert alert-success">
                    <h3 class="text-info text-center">{{ msg }}</h3>
                </div>
            </div>
        {% endfor %}
    {% endif %}

    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.title, null, {
                    'label_attr': {'class': 'label-control'}
                }) }}
                {{ form_widget(form.title, {
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.receiver, null, {
                    'label_attr': {'class': 'label-control'}
                }) }}
                {{ form_widget(form.receiver, {
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.content, null, {
                    'label_attr': {'class': 'label-control'}
                }) }}
                {{ form_widget(form.content, {
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            {{ form_widget(form.submit, {
                'attr': {'class': 'btn btn-lg btn-circle green-haze pull-right'}
            }) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


{% extends "::base.html.twig" %}

{% block title %}AppBundle:Post:edit{% endblock %}

{% block body %}
    {% if app.session.flashBag.has('notice') %}
        {% for msg in app.session.flashBag.get('notice') %}
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="alert alert-success text-center">
                        {{ msg }}
                    </h2>
                </div>
            </div>
        {% endfor %}
    {% endif %}
<h1>Welcome to the Post:edit page</h1>
    {{ form(form) }}
{% endblock %}

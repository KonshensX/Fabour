<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %} - Fabor</title>
        <link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/css/comp.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/css/dropzone.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/css/profile.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/css/MAgallery.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/css/main.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {# ======================================================#}
        {# 0 - Navbar was here                                   #}
        {# ======================================================#}
        {{ render(controller('AppBundle:Default:profilePicture')) }}
        <main>
            {% if app.request.get('_route') == 'homepage' %}
                <div class="search-bar">
                    <div class="container">
                        <div class="row">
                            {{ form_start(form, {
                                'attr': {'class': 'form-inline'}
                            }) }}
                            <div class="col-lg-4">
                                <div class="form-group full-width">
                                    {{ form_widget(form.item, {
                                            'attr': {'class':'form-control full-width', 'placeholder': 'Search for items'}
                                    }) }}
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group full-width">
                                    {{ form_widget(form.category, {
                                        'attr': {'class':'form-control full-width'}
                                    }) }}
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group full-width">
                                    {{ form_widget(form.city, {
                                        'attr': {'class':'form-control full-width'}
                                    }) }}
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group">
                                    {{ form_widget(form.submit, {
                                        'attr': {'class': 'btn btn-circle pull-right'}
                                    }) }}
                                </div>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            {% else %}

            {% endif %}

            <div class="container" style="margin-top: 50px">
            {% block body %}{% endblock %}
            </div>
            {# ======================================================#}
            {# 1 - Popular items bar                                 #}
            {# ======================================================#}
            {{ render(controller('AppBundle:Post:popularItemsBottom')) }}

        </main>
        <footer>
            <div class="container">
                <div class="bottom-logo-holder">
                    <img src="{{ asset('bundles/app/img/logo-bottom.png') }}" alt="">
                </div>
                <p>Copyright Â© 2016 Fabour</p>
                <p class="text-center">This website was made by Mohammed Baza @ 2016</p>
            </div>
        </footer>
        <!-- Loading the scripts -->
        <script type="text/javascript" src="{{ asset('bundles/app/js/jquery-1.11.2.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/app/js/jquery-ui.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/app/js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/app/js/MAgallery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/app/js/dropzone.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/app/js/animation.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/app/js/app.js') }}"></script>

        {% block javascripts %}{% endblock %}

    </body>
</html>
